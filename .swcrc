{
  "exclude": [
    ".*types.ts$",
    ".*.test.ts$"
  ],
  "jsc": {
    "parser": {
      "syntax": "typescript",
      "decorators": true,
      "dynamicImport": true
    },
    "transform": {
      "legacyDecorator": true,
      "decoratorMetadata": true
    },
    "target": "es5",
    "keepClassNames": true,
    "loose": true
  },
  "module": {
    "type": "es6"
  },
  "sourceMaps": "inline"
}
